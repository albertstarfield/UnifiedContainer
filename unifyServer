echo "${pbadge} üå≥ [3/6] Checking ptrace compatibility"
ptraceCompatibilityPolice
yellow
echo "${pbadge} üíΩ [4/6] Checking symlinks compatibility"
symlinksFix
echo "${pbadge} üíΩ [5/6] Updating Manager"
fetchUpdateManager
yellow
echo "${pbadge} üíΩ [6/6] Checking Default Container"
defaultContainerSetup
paramCheck
paramintrepreter
exit
